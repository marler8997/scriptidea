#!/usr/bin/env stitch

# this is a comment
@echo Hello, World

# variables
@set name Fred
@echo Hello $name

# if statements and inline commands
@if @haveprog uname
    @set arch (uname -m)
    @echo $arch
@end

# arrays
# NOT IMPLEMENTED @setarray names args Fred Lisa Joey
# NOT IMPLEMENTED @echo Hello @expand.names
