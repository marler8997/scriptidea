#!/usr/bin/env stitch
rm -rf @scriptdir/repo

# NOTE: using my fork to allow non-static regex storage for now
#@set repo_url https://github.com/kokke/tiny-regex-c
@set repo_url https://github.com/marler8997/tiny-regex-c

@set sha d32d9cdb6fd75904a1cc4190edf3d2af831496c7

git clone $repo_url @scriptdir/repo
git -C @scriptdir/repo checkout $sha -b for_stitch
mv @scriptdir/repo/re.c @scriptdir/repo/re.h @scriptdir
rm -rf @scriptdir/repo
